{
  "manifest_version": 2,
  "name": "Getting started example",
  "description": "Make the current page red",
  "version": "1.0",

  "browser_action": {
    "default_icon": "controller.png",
    "default_title": "Click here!"
  },

  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Redify"
  }
}
